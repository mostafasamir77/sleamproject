<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="register_payment_view_form" model="ir.ui.view">
        <field name="name">register.payment.view.form</field>
        <field name="model">register.payment.button</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name="journal_id" options="{'no_create': True}" />
                            <field name="amount"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="payment_method_id" options="{'no_create': True}" />
                        </group>
                    </group>
                    <footer>
                        <button string="Confirm" type="object" name="action_register_payment" class="btn-primary"/>
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>


    <record id="register_payment_button_wizard_action" model="ir.actions.act_window">
        <field name="name">Register Payment Button</field>
        <field name="res_model">register.payment.button</field>
        <field name="target">new</field>
        <field name="view_mode">form</field>
    </record>

</odoo>
