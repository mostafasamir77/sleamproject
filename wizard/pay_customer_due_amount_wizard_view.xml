<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="pay_customer_due_amount_wizard_view_form" model="ir.ui.view">
        <field name="name">Pay Customer Due Amount</field>
        <field name="model">pay.customer.due.amount.button</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name="journal_id"/>
                            <field name="amount"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="payment_method_id"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Confirm" type="object" name="action_confirm_pay" class="btn-primary"/>
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>


    <record id="pay_customer_due_amount_wizard_action" model="ir.actions.act_window">
        <field name="name">Pay Customer Due Amount</field>
        <field name="res_model">pay.customer.due.amount.button</field>
        <field name="target">new</field>
        <field name="view_mode">form</field>
    </record>

</odoo>