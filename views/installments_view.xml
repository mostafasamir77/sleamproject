<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="installments_view_form" model="ir.ui.view">
        <field name="name">installments.view.form</field>
        <field name="model">account.installments</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="date" />
                            <field name="name" />
                            <field name="payment_state" />
                            <field name="state" />
                        </group>
                        <group>
                            <field name="amount" />
                            <field name="paid_amount" />
                            <field name="remaining" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="installment_action" model="ir.actions.act_window">
        <field name="name">Installments Action</field>
        <field name="res_model">account.installments</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem
        id="account_installments_menu"
        name="Installments"
        action="installment_action"
        parent="account.menu_finance_receivables"
        sequence="10"/>

</odoo>
